<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context="${relativePackage}.${activityClass}">

        <!--<fragment-->
            <!--android:name="aloeio.buzapp_tracer.app.Fragments.MapFragment"-->
            <!--android:id="@+id/main_fragment_map"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:visibility="invisible"-->
            <!--tools:layout="@layout/fragment_map"/>-->


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <android.support.v7.widget.GridLayout
                android:id="@+id/main_controls"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


            <TextView
                    android:id="@+id/main_txt_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Linha (Ex.:T131):"
                    android:textSize="16sp"
                    app:layout_row="0"
                    app:layout_column="0"/>

            <EditText
                    android:id="@+id/main_edt_route"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_row="0"
                    app:layout_column="1"/>

            <TextView
                    android:id="@+id/main_txt_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Placa (Ex.:ABC1234): "
                    android:textSize="16sp"
                    app:layout_row="1"
                    app:layout_column="0"/>

            <EditText
                    android:id="@+id/main_edt_plate"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_row="1"
                    app:layout_column="1"/>

            <TextView
                    android:id="@+id/main_txt_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Acess. Cadeirante:"
                    android:textSize="16sp"
                    app:layout_row="2"
                    app:layout_column="0"/>

            <Switch
                    android:id="@+id/main_swt_accessibility"
                    android:layout_width="100dp"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="left|center_vertical"
                    app:layout_row="2"
                    app:layout_column="1"/>

            <TextView
                    android:id="@+id/main_txt_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Tipo de onibus:"
                    android:textSize="16sp"
                    app:layout_row="3"
                    app:layout_column="0"/>

            <Spinner
                    android:id="@+id/main_spn_type"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/bus_types"
                    app:layout_row="3"
                    app:layout_column="1"/>

            <Button
                    android:id="@+id/main_btn_start"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:text="Iniciar"
                    app:layout_row="5"
                    app:layout_column="0"
                    app:layout_columnSpan="2"/>


        </android.support.v7.widget.GridLayout>

    </ScrollView>

    <ImageView
            android:layout_height="170dp"
            android:layout_width="170dp"
            android:src="@mipmap/buzapp_logo_1k"
            android:layout_gravity="center_horizontal"/>


        <include
                layout="@layout/linear_loading"
                android:layout_above="@+id/login_linear_layout"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"/>

</LinearLayout>