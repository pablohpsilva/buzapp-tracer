<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/light_dark_blue">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/white" />
            <stroke
                    android:width="5dip"
                    android:color="@color/graphity" />
            <size
                    android:width="270dp"
                    android:height="55dp"
                    />
        </shape>
    </item> <!-- pressed -->
    <item android:state_focused="true" android:drawable="@color/light_dark_blue">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/white" />
            <stroke
                    android:width="5dip"
                    android:color="@color/graphity" />
            <size
                    android:width="270dp"
                    android:height="55dp"
                    />
        </shape>
    </item> <!-- focused -->
    <item android:drawable="@color/light_transparent_blue">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/white" />
            <stroke
                    android:width="5dip"
                    android:color="@color/graphity" />
            <size
                    android:width="270dp"
                    android:height="55dp"
                    />
        </shape>
    </item> <!-- default -->
</selector>