<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/light_dark_green">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners
                    android:bottomRightRadius="15dp"
                    android:bottomLeftRadius="15dp"
                    android:topLeftRadius="15dp"
                    android:topRightRadius="15dp"/>
            />
            <size
                    android:width="270dp"
                    android:height="55dp"
                    />
        </shape>
    </item> <!-- pressed -->
    <item android:state_focused="true" android:drawable="@color/light_dark_green">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners
                    android:bottomRightRadius="15dp"
                    android:bottomLeftRadius="15dp"
                    android:topLeftRadius="15dp"
                    android:topRightRadius="15dp"/>
            />
            <size
                    android:width="270dp"
                    android:height="55dp"
                    />
        </shape>
    </item> <!-- focused -->
    <item android:drawable="@color/light_green">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners
                    android:radius="8dp"
                    />
            <size
                    android:width="270dp"
                    android:height="55dp"
                    />
        </shape>
    </item> <!-- default -->
</selector>